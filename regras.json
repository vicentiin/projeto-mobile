{
    "rules": {
      
      ".write": "auth.token.isAdmin === true",
      
      "funcionarios": {
        ".indexOn": ["nome", "funcao"],
        
        ".read": "auth != null",
        "$uid": {
          ".write": "auth.token.isAdmin === true"
        }
      },
      
      "pedido": {
    "$idPedido": {
      ".read": "auth != null && (root.child('funcionarios').child(auth.uid).child('tipo').val() === 'garcom' || auth.token.isAdmin === true)",
      
     
      ".write": "
        (data.exists() && data.child('idFuncionario').val() === auth.uid) ||
        (!data.exists() && newData.child('idFuncionario').val() === auth.uid) ||
        auth.token.isAdmin === true
      ",
      
      "precoUnitario": {
        ".write": "auth.token.isAdmin === true"
      }
    }
  },
      
      "produto": {
        ".indexOn": ["idProduto", "descricao"],
        
        
        ".read": "auth != null",
        
        "$idProduto": {
        
          ".write": "auth.token.isAdmin === true"
        }
      }
    }
  }